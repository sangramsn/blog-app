    <title>Details Blog</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .blog-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .blog-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .blog-author {
            font-size: 16px;
            margin-bottom: 5px;
        }

        .blog-content {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .blog-date {
            font-size: 16px;
            color: #666;
        }
    </style>
</head>
